{
  "name": "v-template",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "prepare": "husky install",
    "lint": "eslint ./src --ext .vue,.js,.ts,.html",
    "lint-fix": "eslint --fix ./src --ext .vue,.js,.ts,.html",
    "lint:css": "stylelint ./src/**/*.{vue,css,scss}"
  },
  "lint-staged": {
    "src/**/*.{vue,js,ts,html}": "eslint",
    "src/**/*.{vue,html}": "htmlhint",
    "*.html": ["eslint"],
    "*.{vue,css,scss}": "stylelint",
    "*": [
      "node ./tools/check-files-size.js"
    ]
  },
  "dependencies": {
    "@commitlint/cli": "^16.2.4",
    "@commitlint/config-conventional": "^16.2.4",
    "vue": "^3.2.25",
    "vue-router": "^4.0.15"
  },
  "devDependencies": {
    "@types/node": "^17.0.32",
    "@typescript-eslint/eslint-plugin": "^5.23.0",
    "@typescript-eslint/parser": "^5.23.0",
    "@vitejs/plugin-vue": "^2.3.3",
    "eslint": "^8.15.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-html": "^6.2.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-vue": "^8.7.1",
    "filesize": "^8.0.7",
    "htmlhint": "^1.1.4",
    "husky": "^8.0.0",
    "lint-staged": "^12.4.1",
    "postcss-html": "^1.4.1",
    "sass": "^1.51.0",
    "stylelint": "^14.8.2",
    "stylelint-config-recommended-scss": "^6.0.0",
    "stylelint-config-recommended-vue": "^1.4.0",
    "stylelint-config-standard-scss": "^3.0.0",
    "stylelint-scss": "^4.2.0",
    "vite": "^2.9.9"
  }
}
